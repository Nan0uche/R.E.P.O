{% extends 'base.html.twig' %}

{% block title %}Détails - {{ weather_station.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1>{{ weather_station.name }} - Détails</h1>
                <a href="{{ path('app_weather_station_show', {'macAddress': weather_station.macAddress}) }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
            
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h3>Informations de la station</h3>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Identifiant</th>
                                    <td>{{ weather_station.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ weather_station.name }}</td>
                                </tr>
                                <tr>
                                    <th>Emplacement</th>
                                    <td>{{ weather_station.location }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ weather_station.description }}</td>
                                </tr>
                                <tr>
                                    <th>Statut</th>
                                    <td>
                                        <span class="badge {% if weather_station.isActive %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ weather_station.isActive ? 'Active' : 'Inactive' }}
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <p><strong>Propriétaire:</strong> 
                            {% if weather_station.user %}
                                {{ weather_station.user.email }}
                            {% else %}
                                <span class="text-muted">Non assigné</span>
                            {% endif %}
                        </p>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Données en temps réel</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h4>Température</h4>
                                        <h2 id="temperature">--</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h4>Humidité</h4>
                                        <h2 id="humidity">--</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h4>Dernière mise à jour</h4>
                                        <p id="last-update">--</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <h3>Historique des données</h3>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Température</th>
                                <th>Humidité</th>
                                <th>Données brutes</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for data in weather_data %}
                                <tr>
                                    <td>{{ data.timestamp|date('d/m/Y H:i:s') }}</td>
                                    <td>{{ data.type }}</td>
                                    <td>
                                        {% set valueText = data.value %}
                                        {% if '"temperature":' in valueText %}
                                            {{ valueText|replace({'"temperature":': '', ',': ''})|trim(' {}"')|split('"')[0] }}°C
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if '"humidity":' in valueText %}
                                            {{ valueText|replace({'"humidity":': '', '}': ''})|trim(' {}"')|split('"')|last }}%
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td><small>{{ data.value }}</small></td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">Aucune donnée disponible</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const macAddress = "{{ weather_station.macAddress }}";
        
        // Fonction pour extraire et afficher les données
        function updateLatestData() {
            fetch(`/weather-data/latest-by-mac/${macAddress}`)
                .then(response => response.json())
                .then(data => {
                    if (!data.error && data.data) {
                        try {
                            const values = JSON.parse(data.data.value);
                            
                            // Mise à jour des valeurs
                            if (values.temperature !== undefined) {
                                document.getElementById('temperature').textContent = values.temperature + '°C';
                            }
                            
                            if (values.humidity !== undefined) {
                                document.getElementById('humidity').textContent = values.humidity + '%';
                            }
                            
                            document.getElementById('last-update').textContent = data.data.timestamp;
                        } catch (e) {
                            console.error('Erreur lors du parsing des données JSON:', e);
                        }
                    }
                })
                .catch(error => console.error('Erreur lors de la récupération des données:', error));
        }
        
        // Mettre à jour immédiatement et toutes les 5 secondes
        updateLatestData();
        setInterval(updateLatestData, 5000);
    });
</script>
{% endblock %}