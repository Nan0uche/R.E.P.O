{% extends 'base.html.twig' %}

{% block title %}Mes données météo{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes données météo</h1>
        <a href="{{ path('app_weather_station_add') }}" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Ajouter des données
        </a>
    </div>

    {% if latestData %}
        <div class="card mb-5">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Dernières mesures - {{ latestData.recordedAt|date('d/m/Y H:i') }}</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-temperature-high fa-3x mb-3 text-danger"></i>
                                <h4>Température</h4>
                                <p class="display-4">{{ latestData.temperature }}°C</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-tint fa-3x mb-3 text-primary"></i>
                                <h4>Humidité</h4>
                                <p class="display-4">{{ latestData.humidity }}%</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-compress-alt fa-3x mb-3 text-secondary"></i>
                                <h4>Pression</h4>
                                <p class="display-4">{{ latestData.pressure }} hPa</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% if latestData.windSpeed %}
                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-wind fa-3x mb-3 text-info"></i>
                                <h4>Vitesse du vent</h4>
                                <p class="display-4">{{ latestData.windSpeed }} km/h</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-compass fa-3x mb-3 text-info"></i>
                                <h4>Direction du vent</h4>
                                <p class="display-4">{{ latestData.windDirection }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            Vous n'avez pas encore de données météo. Cliquez sur "Ajouter des données" pour commencer.
        </div>
    {% endif %}

    {% if weatherData|length > 0 %}
        <h3 class="mb-4">Historique des mesures</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Température</th>
                        <th>Humidité</th>
                        <th>Pression</th>
                        <th>Vitesse du vent</th>
                        <th>Direction</th>
                    </tr>
                </thead>
                <tbody>
                    {% for data in weatherData %}
                        <tr>
                            <td>{{ data.recordedAt|date('d/m/Y H:i') }}</td>
                            <td>{{ data.temperature }}°C</td>
                            <td>{{ data.humidity }}%</td>
                            <td>{{ data.pressure }} hPa</td>
                            <td>{{ data.windSpeed ? data.windSpeed ~ ' km/h' : '-' }}</td>
                            <td>{{ data.windDirection ?: '-' }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
